{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "lib": ["es6", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@util/*": ["util/*"]
    }
  }
}
