{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@scss/*": ["assets/scss/*"],
      "@img/*": ["assets/img/*"],
      "@router/*": ["router/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"]
    }
  },
  "exclude": ["gql-server"]
}
